        private string FormatPhoneNumberDisplayText(string value)
        {
            if (string.IsNullOrEmpty(value)) return null;

            StringBuilder sb = new StringBuilder();
            var vals = value.ToCharArray();
            for (int i = 0; i < vals.Length; i++)
            {
                if (i == 3 || i == 6 || i == 10)
                    sb.Append("-");
                sb.Append(vals[i]);
            }


            return sb.ToString();
        }


