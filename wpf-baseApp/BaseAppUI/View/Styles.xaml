    <Style TargetType="{x:Type controls:RippleEffectDecorator}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RippleEffectDecorator}">
                    <Grid x:Name="PART_grid"
                          Width="{Binding ElementName=PART_contentpresenter,
                                          Path=ActualWidth}"
                          Height="{Binding ElementName=PART_contentpresenter,
                                           Path=ActualHeight}"
                          Background="{TemplateBinding Background}"
                          ClipToBounds="True">


                        <Grid.Resources>
                            <Storyboard x:Key="PART_animation" Storyboard.TargetName="PART_ellipse">
                                <DoubleAnimation From="0" Storyboard.TargetProperty="Width" />
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" />
                                <DoubleAnimation BeginTime="0:0:0.5"
                                                 Duration="0:0:0.25"
                                                 From=".05"
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="0" />
                                <DoubleAnimation BeginTime="0:0:0.75"
                                                 Duration="0:0:0"
                                                 Storyboard.TargetProperty="Width"
                                                 To="0" />
                                <DoubleAnimation BeginTime="0:0:0.75"
                                                 Duration="0:0:0"
                                                 Storyboard.TargetProperty="Opacity"
                                                 To=".05" />
                            </Storyboard>
                        </Grid.Resources>

                        <ContentPresenter x:Name="PART_contentpresenter" />

                        <Ellipse x:Name="PART_ellipse"
                                 Width="0"
                                 Height="{Binding Path=Width,
                                                  RelativeSource={RelativeSource Self}}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ClipToBounds="True"
                                 Fill="{Binding Path=HighlightBackground,
                                                RelativeSource={RelativeSource TemplatedParent}}"
                                 Opacity=".05" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="UpdateStateStyle" TargetType="ToggleButton">

        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="IsHitTestVisible" Value="False" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">


                    <Image Width="24"
                           Height="24"
                           Margin="{TemplateBinding Margin}"
                           Source="{DynamicResource Icon_updater}"
                           Stretch="Uniform">
                        <Image.RenderTransform>
                            <RotateTransform x:Name="rt" Angle="0.0" CenterX="12" CenterY="12" />
                        </Image.RenderTransform>
                    </Image>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1"
                                                         RepeatBehavior="Forever"
                                                         Storyboard.TargetName="rt"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="-360" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1"
                                                         Storyboard.TargetName="rt"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="-360" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

